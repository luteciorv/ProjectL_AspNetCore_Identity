@model IEnumerable<IdentityUser>

<h1>Usuários</h1>

@if(Model.Any())
{
    <a asp-area="" asp-action="Register" asp-controller="Account" class="btn btn-primary mb-3" style="width: auto;">Cadastrar novo usuário</a>

    foreach(var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">Id do usuário: @user.Id</div>

            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>

            <div class="card-footer">
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <input type="submit" class="btn btn-sm btn-danger" value="Apagar" />
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">Não existem usuários cadastrados no sistema</div>

        <div class="card-body">
            <h5 class="card-title">Clique no botão abaixo para cadastrar um novo usuário</h5>

            <a class="btn btn-primary" style="width: auto;" asp-area="" asp-controller="Account" asp-action="Register">Cadastrar novo usuário</a>
        </div>
    </div>
}