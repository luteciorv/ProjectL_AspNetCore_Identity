@model IEnumerable<IdentityUser>

<h2>Usuários</h2>

@if(Model.Any())
{
    <table class="table table-sm table-bordered">
        <tr>
            <th>Id</th>
            <th>Nome</th>
        </tr>

        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Edit" asp-route-id="@user.Id" method="get">
                        <input type="submit" class="btn btn-sm btn-primary" value="Gerenciar reinvidicações" />
                    </form>
                </td>
            </tr>
        }
    </table>
}